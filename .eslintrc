// http://eslint.org/docs/rules/
{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "classes": true
    }
  },
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "require": true
  },
  "rules": {
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "camelcase": [2, {"properties": "never"}],
    "comma-dangle": [2, "never"],
    "comma-style": [2, "last"],
    "consistent-this": [2, "self"],
    "curly": [2, "all"],
    "eqeqeq": 0,
    "indent": [2, 4, {"SwitchCase": 1}],
    "jsx-quotes": [1, "prefer-double"],
    "key-spacing": 0,
    "keyword-spacing": 2,
    "lines-around-comment": [2, {"afterBlockComment": false, "afterLineComment": false}],
    "max-depth": [1, 3],
    "max-len": [2, 140, 4, {"ignoreComments": true, "ignoreUrls": true}],
    "max-nested-callbacks": [2, 3],
    "max-params": [1, 5],
    "new-cap": 2,
    "newline-after-var": [1, "always"],
    "no-bitwise": 2,
    "no-caller": 2,
    "no-dupe-keys": 2,
    "no-empty": 1,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-spaces": 0,
    "no-multiple-empty-lines": 1,
    "no-new": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-unused-vars": 1,
    "no-use-before-define": [2, "nofunc"],
    "one-var": [2, {"initialized": "never"}],
    "operator-linebreak": [2, "after"],
    "quotes": [2, "single"],
    "react/jsx-closing-bracket-location": [1, {"location": "after-props"}],
    "react/jsx-curly-spacing": [1, "never"],
    "react/jsx-indent-props": [1, 4],
    "react/jsx-max-props-per-line": [1, { "maximum": 5 }],
    "react/jsx-no-duplicate-props": [1, { "ignoreCase": true }],
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-deprecated": [1, {"react": "0.14.7"}],
    "react/no-did-mount-set-state": [1, "allow-in-func"],
    "react/no-did-update-set-state": [1, "allow-in-func"],
    "react/no-direct-mutation-state": 1,
    "react/no-multi-comp": [1, { "ignoreStateless": true}],
    "react/no-unknown-property": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "react/wrap-multilines": 1,
    "semi": [2, "always"],
    "semi-spacing": [2, {"before": false, "after": true}],
    "space-before-blocks": [2, "always"],
    "space-infix-ops": 2,
    "space-return-throw-case": 0,
    "strict": [2, "global"],
    "valid-jsdoc": 1,
    "yoda": [2, "never"]
  }
}
